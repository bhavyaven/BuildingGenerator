param width = 1.0;
param height = 1.0;
param depth = 1.0;

# S: Starting shape
shape S
split(z) { 0.5: B | 0.5: F }

# B: Back
shape B
scale(z) 2.0
scale(y) 1.5
add_chimney(right)

# F: Front (split into two side blocks)
shape F
split(x) { 0.5: I | 0.5: J }

# 1: Left rotated block
shape I
scale(z) 1.5

# 2: Right rotated block
shape J
scale(z) 1.5
add_door