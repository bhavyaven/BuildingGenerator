param width = 1.0
param height = 1.0
param depth = 1.0

# S: Start shape
shape S
split(z) { 0.5: B | 0.5: F }

# B: Back half
shape B
add_chimney(right)

# F: Front half, split into 3 blocks across x
shape F
split(x) { 0.33: I | 0.34: J | 0.33: K }

# I: Left cube
shape I
scale(z) 1.5
scale(y) 0.5

# J: Middle cube with door
shape J
scale(z) 1.5
scale(y) 0.5
add_door

# K: Right cube
shape K
scale(z) 1.5
scale(y) 0.5